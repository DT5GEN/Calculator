<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="12dp"
    tools:context=".Calculator">

    <ImageView
        android:id="@+id/display_calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/display"
        tools:layout_editor_absoluteY="-12dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/display_calculator"
        android:fontFamily="sans-serif"
        android:text="012345678901"
        android:textAlignment="center"
        android:textSize="46sp">

    </TextView>


    <TextView

        android:id="@+id/button_percent"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_values"

        android:shadowColor="#525252"
        android:shadowDx="-2"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="%"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_0"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/button_0"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_values"
        android:shadowColor="#525252"

        android:shadowDx="-2"
        android:shadowDy="3"

        android:shadowRadius="5"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/button_dot"
        app:layout_constraintStart_toEndOf="@+id/button_percent" />

    <TextView
        android:id="@+id/button_dot"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_values"
        android:shadowColor="#525252"
        android:shadowDx="-2"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/angry_btn"
        app:layout_constraintStart_toEndOf="@id/button_0" />

    <TextView

        android:id="@+id/angry_btn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginLeft="5dp"

        android:background="@drawable/button_result"
        android:gravity="center"
        android:shadowColor="#525252"


        android:shadowDx="-2"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="="
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_dot"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="@+id/button_1" />

    <TextView
        android:id="@+id/button_1"
        android:layout_width="0dp"
        android:layout_height="56dp"

        android:layout_marginVertical="4dp"

        android:background="@drawable/button_values"
        android:shadowColor="#525252"
        android:shadowDx="-2"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="1"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/button_percent"
        app:layout_constraintEnd_toEndOf="@id/button_percent"
        app:layout_constraintStart_toStartOf="@id/button_percent" />

    <TextView
        android:id="@+id/button_2"
        android:layout_width="0dp"
        android:layout_height="56dp"

        android:layout_marginBottom="4dp"
        android:background="@drawable/button_values"
        android:shadowColor="#525252"
        android:shadowDx="-2"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="2"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@id/button_0"
        app:layout_constraintStart_toStartOf="@id/button_0"

        app:layout_constraintTop_toTopOf="@id/button_1" />

    <TextView
        android:id="@+id/button_3"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="3dp"
        android:background="@drawable/button_values"
        android:shadowColor="#525252"
        android:shadowDx="-2"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="3"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@id/button_2"
        app:layout_constraintEnd_toEndOf="@id/button_dot"
        app:layout_constraintEnd_toStartOf="@+id/angry_btn"
        app:layout_constraintStart_toEndOf="@id/button_2" />


    <TextView

        android:id="@+id/button_4"

        android:layout_width="0dp"
        android:layout_height="56dp"

        android:background="@drawable/button_values"
        android:shadowColor="#525252"
        android:shadowDx="-2"

        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="4"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@id/button_sum"
        app:layout_constraintEnd_toEndOf="@id/button_percent"
        app:layout_constraintStart_toStartOf="@id/button_percent"
        app:layout_constraintTop_toTopOf="@id/button_sum" />

    <TextView
        android:id="@+id/button_5"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:background="@drawable/button_values"
        android:shadowColor="#525252"
        android:shadowDx="-2"
        android:shadowDy="3"
        android:shadowRadius="5"

        android:text="5"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@id/button_4"
        app:layout_constraintEnd_toEndOf="@id/button_0"
        app:layout_constraintStart_toStartOf="@id/button_2" />

    <TextView

        android:id="@+id/button_6"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:background="@drawable/button_values"
        android:shadowColor="#525252"
        android:shadowDx="-2"
        android:shadowDy="3"
        android:shadowRadius="5"

        android:text="6"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@id/button_5"
        app:layout_constraintEnd_toEndOf="@id/button_dot"
        app:layout_constraintStart_toStartOf="@id/button_3" />

    <TextView
        android:id="@+id/button_sum"
        android:layout_width="0dp"
        android:layout_height="56dp"

        android:layout_margin="6dp"
        android:layout_marginVertical="4dp"
        android:layout_weight="1"
        android:background="@drawable/button_values"
        android:shadowColor="#525252"
        android:shadowDx="-2"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="+"
        android:textAlignment="center"
        android:textColor="#4100F3"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/angry_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/angry_btn" />

    <TextView

        android:id="@+id/button_7"
        android:layout_width="0dp"
        android:layout_height="56dp"

        android:layout_marginVertical="4dp"
        android:background="@drawable/button_values"
        android:shadowColor="#525252"
        android:shadowDx="-2"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="7"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/button_6"
        app:layout_constraintEnd_toEndOf="@id/button_percent"
        app:layout_constraintStart_toStartOf="@id/button_percent" />

    <TextView
        android:id="@+id/button_8"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_values"
        android:shadowColor="#525252"
        android:shadowDx="-2"
        android:shadowDy="3"
        android:shadowRadius="5"

        android:text="8"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/button_6"
        app:layout_constraintEnd_toEndOf="@id/button_0"
        app:layout_constraintStart_toStartOf="@id/button_0" />

    <TextView

        android:id="@+id/button_9"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_values"
        android:shadowColor="#525252"
        android:shadowDx="-2"
        android:shadowDy="3"
        android:shadowRadius="5"

        android:text="9"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/button_6"
        app:layout_constraintEnd_toEndOf="@id/button_dot"
        app:layout_constraintStart_toStartOf="@id/button_dot" />

    <TextView
        android:id="@+id/button_minus"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_values"
        android:shadowColor="#525252"
        android:shadowDx="-2"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="-"
        android:textAlignment="center"
        android:textColor="#4100F3"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/button_sum"
        app:layout_constraintEnd_toEndOf="@id/button_sum"
        app:layout_constraintStart_toStartOf="@id/button_sum" />


    <TextView

        android:id="@+id/button_reset"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_values"
        android:shadowColor="#525252"
        android:shadowDx="-2"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="c"
        android:textAlignment="center"
        android:textColor="#4100F3"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/button_7"
        app:layout_constraintEnd_toEndOf="@id/button_percent"
        app:layout_constraintStart_toStartOf="@id/button_percent" />

    <TextView
        android:id="@+id/button_separation"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_values"
        android:shadowColor="#525252"
        android:shadowDx="-2"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="รท"
        android:textAlignment="center"
        android:textColor="#4100F3"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/button_8"
        app:layout_constraintEnd_toEndOf="@id/button_0"
        app:layout_constraintStart_toStartOf="@id/button_0" />

    <TextView

        android:id="@+id/angry_multiplication"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/button_values"
        android:shadowColor="#525252"
        android:shadowDx="-2"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="ร"
        android:textAlignment="center"
        android:textColor="#4100F3"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/button_8"
        app:layout_constraintEnd_toEndOf="@id/button_dot"
        app:layout_constraintStart_toStartOf="@id/button_dot" />

    <TextView
        android:id="@+id/button_backspace"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginVertical="4dp"
        app:layout_constraintStart_toStartOf="@id/button_sum"
        app:layout_constraintEnd_toEndOf="@id/button_sum"
        app:layout_constraintBottom_toTopOf="@id/button_minus"
        android:background="@drawable/button_values"
        android:shadowColor="#525252"
        android:shadowDx="-2"
        android:shadowDy="3"
        android:shadowRadius="5"

        android:text='del'
        android:textAlignment="center"
        android:textColor="#4100F3"
        android:textSize="40sp" />


</androidx.constraintlayout.widget.ConstraintLayout>