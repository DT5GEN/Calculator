<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="12dp"
    tools:context=".Calculator">

    <ImageView
        android:id="@+id/display_calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/display"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="-12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:text="012345678901"
        android:textAlignment="center"
        android:textSize="46sp"
        app:layout_constraintBottom_toBottomOf="@id/display_calculator"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>


    <TextView

        android:id="@+id/button_percent_text_view"
        style="@style/style_buttons_digit"
        android:layout_marginHorizontal="3dp"
        android:text="%"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_0"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/button_0"
        style="@style/style_buttons_digit"
        android:layout_marginHorizontal="3dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/button_dot"
        app:layout_constraintStart_toEndOf="@+id/button_percent_text_view" />

    <TextView
        android:id="@+id/button_dot"
        style="@style/style_buttons_digit"
        android:layout_marginHorizontal="3dp"
        android:text="."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_result_text_view"
        app:layout_constraintStart_toEndOf="@id/button_0" />

    <TextView

        android:id="@+id/button_result_text_view"
        style="@style/style_button_result"
        android:layout_marginLeft="5dp"
        android:text="="
        app:layout_constraintBottom_toBottomOf="@+id/button_dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_1" />

    <TextView
        android:id="@+id/button_1"
        style="@style/style_buttons_digit"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/button_percent_text_view"
        app:layout_constraintEnd_toEndOf="@id/button_percent_text_view"
        app:layout_constraintStart_toStartOf="@id/button_percent_text_view" />

    <TextView
        android:id="@+id/button_2"
        style="@style/style_buttons_digit"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@id/button_1"
        app:layout_constraintEnd_toEndOf="@id/button_0"
        app:layout_constraintStart_toStartOf="@id/button_0"
        app:layout_constraintTop_toTopOf="@id/button_1" />

    <TextView
        android:id="@+id/button_3"
        style="@style/style_buttons_digit"
        android:text="3"
        android:layout_marginHorizontal="3dp"
        app:layout_constraintBottom_toTopOf="@id/button_dot"
        app:layout_constraintEnd_toEndOf="@id/button_dot"
        app:layout_constraintEnd_toStartOf="@+id/button_result_text_view"
        app:layout_constraintStart_toEndOf="@id/button_2" />


    <TextView

        android:id="@+id/button_4"
        style="@style/style_buttons_digit"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@id/button_1"
        app:layout_constraintEnd_toEndOf="@id/button_percent_text_view"
        app:layout_constraintStart_toStartOf="@id/button_percent_text_view"
        app:layout_constraintTop_toTopOf="@id/button_sum" />

    <TextView
        android:id="@+id/button_5"
        style="@style/style_buttons_digit"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@id/button_2"
        app:layout_constraintEnd_toEndOf="@id/button_0"
        app:layout_constraintStart_toStartOf="@id/button_2" />

    <TextView

        android:id="@+id/button_6"
        style="@style/style_buttons_digit"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@id/button_3"
        app:layout_constraintEnd_toEndOf="@id/button_dot"
        app:layout_constraintStart_toStartOf="@id/button_3" />

    <TextView
        android:id="@+id/button_sum"
        style="@style/style_buttons_functions"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@id/button_result_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/button_result_text_view" />

    <TextView

        android:id="@+id/button_7"
        style="@style/style_buttons_digit"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@id/button_6"
        app:layout_constraintEnd_toEndOf="@id/button_percent_text_view"
        app:layout_constraintStart_toStartOf="@id/button_percent_text_view" />

    <TextView
        android:id="@+id/button_8"
        style="@style/style_buttons_digit"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@id/button_6"
        app:layout_constraintEnd_toEndOf="@id/button_0"
        app:layout_constraintStart_toStartOf="@id/button_0" />

    <TextView

        android:id="@+id/button_9"
        style="@style/style_buttons_digit"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@id/button_6"
        app:layout_constraintEnd_toEndOf="@id/button_dot"
        app:layout_constraintStart_toStartOf="@id/button_dot" />

    <TextView
        android:id="@+id/button_subtraction"
        style="@style/style_buttons_functions"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@id/button_sum"
        app:layout_constraintEnd_toEndOf="@id/button_sum"
        app:layout_constraintStart_toStartOf="@id/button_sum" />


    <TextView

        android:id="@+id/button_reset"
        style="@style/style_buttons_functions"
        android:text="c"
        app:layout_constraintBottom_toTopOf="@id/button_7"
        app:layout_constraintEnd_toEndOf="@id/button_percent_text_view"
        app:layout_constraintStart_toStartOf="@id/button_percent_text_view" />

    <TextView
        android:id="@+id/button_separation"
        style="@style/style_buttons_functions"
        android:text="รท"
        app:layout_constraintBottom_toTopOf="@id/button_8"
        app:layout_constraintEnd_toEndOf="@id/button_0"
        app:layout_constraintStart_toStartOf="@id/button_0" />

    <TextView

        android:id="@+id/button_multiplication"
        style="@style/style_buttons_functions"
        android:text="ร"
        app:layout_constraintBottom_toTopOf="@id/button_8"
        app:layout_constraintEnd_toEndOf="@id/button_dot"
        app:layout_constraintStart_toStartOf="@id/button_dot" />

    <TextView
        android:id="@+id/button_backspace"
        style="@style/style_buttons_functions"
        android:text='del'
        app:layout_constraintBottom_toTopOf="@id/button_subtraction"
        app:layout_constraintEnd_toEndOf="@id/button_sum"
        app:layout_constraintStart_toStartOf="@id/button_sum" />


</androidx.constraintlayout.widget.ConstraintLayout>